                <Font name="Poor Richard" size="50.0" />
            </font>
        </Label>
        <ImageView fitHeight="59.0" fitWidth="57.0" layoutX="525.0" layoutY="49.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../../imagenes/12.png" />
            </image>
        </ImageView>

        <Label fx:id="lblLevel" alignment="CENTER" layoutX="55.0" layoutY="48.0"
               prefHeight="59.0" prefWidth="164.0" text="1" textFill="WHITE">
            <font>
                <Font name="Poor Richard" size="40.0" />
            </font>
        </Label>

        <!-- Score display (you can place where you want) -->
        <Label fx:id="lblScore" alignment="CENTER_LEFT" layoutX="284.0" layoutY="52.0"
               prefHeight="40.0" prefWidth="200.0" text="Puntos: 0" textFill="WHITE">
            <font>
                <Font name="Poor Richard" size="32.0" />
            </font>
        </Label>
    </children>
</AnchorPane>

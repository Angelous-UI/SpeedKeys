<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="540.0" prefWidth="720.0"
            styleClass="juego" stylesheets="@../../../css/imagenes.css"
            xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.speedkeys.GameController">
    <children>
        <ImageView fitHeight="115.0" fitWidth="547.0" layoutX="87.0" layoutY="414.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../../imagenes/10.png" />
            </image>
        </ImageView>

        <Label fx:id="lblWord" alignment="CENTER" layoutX="196.0" layoutY="199.0"
               prefHeight="143.0" prefWidth="329.0" text="Label" textFill="WHITE">
            <font>
                <Font name="Poor Richard" size="50.0" />
            </font>
        </Label>

        <TextField fx:id="txtInput" alignment="CENTER" layoutX="156.0" layoutY="427.0"
                   styleClass="texto" stylesheets="@../../../css/imagenes.css">
            <font>
                <Font name="Poor Richard" size="32.0" />
            </font>
        </TextField>

        <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="37.0" layoutY="35.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../../imagenes/11.png" />
            </image>
        </ImageView>
        <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="493.0" layoutY="35.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../../imagenes/11.png" />
